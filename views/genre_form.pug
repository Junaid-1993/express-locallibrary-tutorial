extends layout

block content

  h1 #{title}

  //- This will send post request to "catalog/genre/create" as the action attribute is empty means "current page's url"   
  form(method='POST' action='')
    div.form-group
      label(for='name') Genre:
      input#name.form-control(type='text', placeholder='Fantasy, Poetry etc.' name='name' required='true' value=(undefined===genre ? '' : genre.name) )
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        //- Unescaped Buffered Code ( != )
        li!= error.msg
